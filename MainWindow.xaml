                                                                                   Text="★" 
                                                                                   FontSize="19"
                                                                                   Margin="0,2,0,0"
                                                                                   HorizontalAlignment="Center"
                                                                                   VerticalAlignment="Center"
                                                                                   Foreground="{Binding IsFavorite, Converter={StaticResource FavoriteColorConverter}}">
