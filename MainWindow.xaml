                                                                                <DropShadowEffect 
                                                                                    Color="#FF000000"
                                                                                    Direction="315"
                                                                                    ShadowDepth="1"
                                                                                    BlurRadius="0"
                                                                                    Opacity="1"
                                                                                    RenderingBias="Quality"/>
                                                                            </TextBlock.Effect>
                                                                        </TextBlock>
                                                                    </Grid>
